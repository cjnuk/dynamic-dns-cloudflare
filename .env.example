# Cloudflare Dynamic DNS Configuration
# Copy this file to .env and fill in your values
# Keep .env secure - never commit to git

# Authentication (choose ONE method)
#
# Option 1: API Token (recommended, scoped permissions)
# Create at: https://dash.cloudflare.com/profile/api-tokens
# Required permissions: Zone > DNS > Edit (for your zones)
CLOUDFLARE_API_TOKEN="your_api_token_here"
#
# Option 2: Global API Key (full account access - less secure)
# Found at: https://dash.cloudflare.com/profile/api-tokens (View Global API Key)
# CLOUDFLARE_EMAIL="your_email@example.com"
# CLOUDFLARE_API_KEY="your_global_api_key_here"

# DNS Records - Zone ID and Record Name must be paired
# Find Zone ID in Cloudflare dashboard: Domain > Overview > right sidebar
# Each record needs both ZONE_ID and RECORD_NAME set

# Record 1
CLOUDFLARE_ZONE_ID1="your_zone_id_here"
CLOUDFLARE_RECORD_NAME1="home.example.com"

# Record 2
CLOUDFLARE_ZONE_ID2=""
CLOUDFLARE_RECORD_NAME2=""

# Record 3
CLOUDFLARE_ZONE_ID3=""
CLOUDFLARE_RECORD_NAME3=""

# Record 4
CLOUDFLARE_ZONE_ID4=""
CLOUDFLARE_RECORD_NAME4=""

# Record 5
CLOUDFLARE_ZONE_ID5=""
CLOUDFLARE_RECORD_NAME5=""

# Caching Settings
# How often to verify with Cloudflare API when IP is unchanged (in minutes)
# Default: 60 (hourly reconfirmation)
DDNS_VERIFY_INTERVAL_MINUTES=60
